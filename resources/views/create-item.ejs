<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="http://localhost:1111/socket.io/socket.io.js"></script>
    <title>Document</title>
</head>

<style>
    .form-data {
        width: 400px;
        display: flex;
        flex-direction: column;
        border: 1px solid black;
        padding: 15px 15px 15px 15px;
        border-radius: 5px;
    }

    body {
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .control {
        width: 100%;
        justify-content: center;
    }

    .inpt {
        height: 25px;
        border-radius: 5px;
    }

    .btn_submit {
        text-decoration: none;
        padding: 0.5rem 1rem;
        margin-bottom: 0.8rem;
        display: flex;
        width: 8rem;
        justify-content: center;
        align-items: center;
        background-color: #f0e6e6;
        border: 1px solid #ddd;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        font-weight: bold;
        color: #333;
        box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.2);
    }

    .btn_submit:hover {
        background-color: rgb(58, 48, 48);
        color: white;
        transition: 0.4s;
    }

    .cntr_btn {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .top-div {
        display: flex;
        width: 100%;
        justify-content: start;
    }


    a {
        text-decoration: none;
        padding: 0.5rem 1rem;
        margin-left: 1rem;
        margin-top: 0.5rem;
        display: flex;
        width: 8rem;
        justify-content: center;
        align-items: center;
        background-color: #f2f2f2;
        border: 1px solid #ddd;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1.2rem;
        font-weight: bold;
        color: #333;
        box-shadow: 0px 1px 3px rgba(0, 0, 0, 0.2);
    }

    a:hover {
        background-color: rgb(58, 48, 48);
        color: white;
        transition: 0.4s;
    }
</style>
<script>
    const socket = io('http://localhost:1111');
    socket.on('join-auction', data => {
        alert(data);
        window.location.href = "/live_auction"
    })
</script>

<body>
    <div class="top-div">
        <a href="/welcome"> Home </a>
    </div>
    <div>
        <form class="form-data" action="/create-item" method="post" enctype="multipart/form-data">
            <div class="cntr_btn">
                <h2>ADD AUCTION ITEM...</h2>
            </div>
            <label for="item_name">
                <h2>Item Name :</h2>
            </label> <input class="inpt" name="item_name" id="item_name" type="text" />
            <label for="description">
                <h2>Description :</h2>
            </label> <input class="inpt" name="description" id="description" type="text" />
            <label for="item_id">
                <h2>Item Id :</h2>
            </label> <input class="inpt" name="item_id" id="item_id" type="text" />
            <label>
                <h2>Item Image :</h2>
            </label> <input class="inpt" name="image" type="file" />
            <label for="start_price">
                <h2>Start Price :</h2>
            </label> <input class="inpt" name="start_price" id="start_price" type="number" />
            <br></br>
            <div class="cntr_btn"> <button type="submit" class="btn_submit">SUBMIT</button> </div>
        </form>
    </div>
</body>


</html>
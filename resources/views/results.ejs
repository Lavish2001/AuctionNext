<body id="bbb">
    <a onclick="leave(event)"> Back </a>
    <div class="top-div">

    </div>
    <h1>
        Here are Auction Results...
    </h1>
    <div class="double">
        <div id="main">

        </div>


</body>

<script>

    const leave = (e) => {
        e.preventDefault();
        localStorage.removeItem('auction');
        return window.location.href = "/welcome"
    };

    const auction = JSON.parse(localStorage.getItem('auction'));
    if (auction) {
        document.getElementById('main').innerHTML = `
               <div class="innermain"> 
                <img src=http://localhost:9000/Images/${auction.Item.image}> </img>
                <div class="items">
                    <h2> Item Name : <span> ${auction.Item.item_name} </span> </h2>
                    <h2> Description : <span> ${auction.Item.description} </span> </h2>
                    <h2> Base Price : <span> ${auction.Item.base_price} $ </span> </h2>
                    <h2> Highest Bid : <span> ${auction.Bidding.length ? auction.Bidding[0].bid_amount : `0`} $ </span> </h2>
                    <h2> Sold To : <span> ${auction.Bidding.length ? auction.Bidding[0].Bidder.username : `Unsold`} </span> </h2>
                    <h2> Started at : <span> ${new Date(auction.started_at).toLocaleTimeString([], { hour12: true, hour: 'numeric', minute: 'numeric' })} </span> </h2>
                    <h2> Closed at : <span> ${new Date(auction.ended_at).toLocaleTimeString([], { hour12: true, hour: 'numeric', minute: 'numeric' })} </span> </h2>
                    </div>
                </div>
                `;
    } else {
        document.getElementById('bbb').innerHTML = `
 <h1> No Auction Results Found</h1>
 `;
        setTimeout(() => {
            alert('No Results Click Ok ');
            return window.location.href = '/welcome'
        }, 4000)
    }



</script>

